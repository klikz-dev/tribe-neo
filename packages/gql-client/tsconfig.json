{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./src/graphql", "./src/client", "./src/types"],
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["test/**/*", "node_modules", "jest.config.ts", "dist/**/*"]
}
